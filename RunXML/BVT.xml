            <class name="app.pptweb.testcases.login.authenticationtestcases">
                <methods>
                    <include name="SF04_TC01_SendActivationCode_ForgotPasswordFlow"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="SIT_xPPTWEB_Login_03_04_TC03_Send Activation Code by Voice">
        <classes>
            <class name="app.pptweb.testcases.login.authenticationtestcases">
                <methods>
                    <include name="SF04_TC01_SendActivationCode_ForgotPasswordFlow"/>
